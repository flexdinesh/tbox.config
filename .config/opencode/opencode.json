{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "snapshot": false,
  "permission": {
    "bash": {
      "find *": "allow",
      "ripgrep *": "allow",
      "grep *": "allow",
      "sort *": "allow",
      "ls *": "allow",
      "tree *": "allow",
      "head *": "allow",
      "git status *": "allow",
      "git log *": "allow",
      "git diff *": "allow",
      "git show *": "allow",
      "*": "ask"
    },
    "edit": {
      "*.md": "allow",
      "*": "deny"
    },
    "webfetch": "allow",
    "doom_loop": "ask",
    "external_directory": "ask"
  }
}
